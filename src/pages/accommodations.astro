    <div class="container-custom">
      <div class="space-y-16">
        {
          accommodations.map((room, index) => (
            <div
              class={`grid grid-cols-1 md:grid-cols-2 gap-10 items-center ${index % 2 === 1 ? "md:flex-row-reverse" : ""}`}
            >
              <div
                class={`w-full h-[400px] rounded overflow-hidden ${index % 2 === 1 ? "md:order-2" : ""}`}
              >
                <div
                  class="placeholder-img"
                  style={{ background: room.gradient }}
                >
                  <span>{room.name}</span>
                </div>
              </div>
              <div class={index % 2 === 1 ? "md:order-1" : ""}>
                <h3 class="text-3xl text-primary mb-2">{room.name}</h3>
                <p class="text-accent font-medium mb-5">{room.size}</p>
                <p class="mb-5 leading-relaxed">{room.description}</p>
