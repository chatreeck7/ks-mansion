          { icon: 'ðŸŒ¿', title: 'Private Gardens', desc: 'Expansive landscaped gardens offering peace and natural beauty' },
          { icon: 'ðŸ½ï¸', title: 'Gourmet Dining', desc: 'Exceptional culinary experiences crafted by our expert chefs' },
          { icon: 'ðŸ’Ž', title: 'Luxury Amenities', desc: 'World-class facilities designed for your comfort and enjoyment' },
        ].map((feature) => (
          <div class="bg-white p-10 text-center transition-all hover:-translate-y-2 hover:shadow-xl rounded">
            <div class="text-5xl mb-5">{feature.icon}</div>
            <h3 class="text-primary mb-4">{feature.title}</h3>
            <p class="text-text-light">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 md:py-28 bg-gradient-to-br from-secondary to-primary text-center text-white">
    <div class="container-custom">
      <h2 class="text-white mb-5">Experience Luxury Redefined</h2>
      <p class="text-xl mb-10 text-white/90">Book your exclusive stay at KS Mansion today</p>
      <a href="/reservations" class="btn btn-primary">Make a Reservation</a>
    </div>
  </section>

  <Footer />
</BaseLayout>
