---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/react/ContactForm';
---

<BaseLayout title="Contact - KS Mansion" description="Get in touch with KS Mansion">
  <Navigation />

  <!-- Page Header -->
  <section class="page-header">
    <div class="page-header-content">
      <h1 class="text-4xl md:text-5xl font-light mb-4 tracking-wide">Contact Us</h1>
      <p class="text-lg md:text-xl">We're here to assist you with any inquiries</p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-16 mb-16">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <h2 class="mb-8">Send Us a Message</h2>
          <ContactForm client:load />
        </div>

        <!-- Contact Information -->
        <div class="space-y-6">
          <div class="bg-bg-light p-8 rounded">
            <h3 class="text-xl mb-5">Contact Information</h3>
            <div class="space-y-5">
              <div>
                <h4 class="text-secondary mb-2 font-medium">Address</h4>
                <p class="text-text-light text-sm">123 Mansion Drive<br />Luxury District<br />State, ZIP 12345</p>
              </div>
              <div>
                <h4 class="text-secondary mb-2 font-medium">Phone</h4>
                <p class="text-text-light text-sm">Main: +1 (555) 123-4567<br />Reservations: +1 (555) 123-4568<br />Concierge: +1 (555) 123-4569</p>
              </div>
              <div>
                <h4 class="text-secondary mb-2 font-medium">Email</h4>
                <p class="text-text-light text-sm">info@ksmansion.com<br />reservations@ksmansion.com<br />concierge@ksmansion.com</p>
              </div>
            </div>
          </div>

          <div class="bg-bg-light p-8 rounded">
            <h3 class="text-xl mb-5">Office Hours</h3>
            <div class="space-y-2 text-sm text-text-light">
              <p><strong class="text-primary">Reception:</strong> 24/7</p>
              <p><strong class="text-primary">Reservations:</strong><br />Monday - Friday: 9:00 AM - 8:00 PM<br />Saturday - Sunday: 10:00 AM - 6:00 PM</p>
              <p><strong class="text-primary">Concierge:</strong> 24/7</p>
            </div>
          </div>

          <div class="bg-bg-light p-8 rounded">
            <h3 class="text-xl mb-5">Quick Links</h3>
            <ul class="list-none space-y-2">
              <li><a href="/reservations" class="text-primary hover:text-accent transition-colors">Make a Reservation</a></li>
              <li><a href="/accommodations" class="text-primary hover:text-accent transition-colors">View Accommodations</a></li>
              <li><a href="/experiences" class="text-primary hover:text-accent transition-colors">Explore Experiences</a></li>
              <li><a href="/gallery" class="text-primary hover:text-accent transition-colors">Photo Gallery</a></li>
            </ul>
          </div>

          <div class="bg-bg-light p-8 rounded">
            <h3 class="text-xl mb-5">Follow Us</h3>
            <div class="flex flex-col space-y-2">
              <a href="#" class="text-primary hover:text-accent transition-colors">Instagram</a>
              <a href="#" class="text-primary hover:text-accent transition-colors">Facebook</a>
              <a href="#" class="text-primary hover:text-accent transition-colors">Twitter</a>
              <a href="#" class="text-primary hover:text-accent transition-colors">Pinterest</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Map Section -->
      <div class="mb-16">
        <h2 class="mb-8">Location</h2>
        <div class="w-full h-[400px] bg-bg-light rounded flex items-center justify-center">
          <div class="text-center text-text-light">
            <p class="mb-2">Map will be integrated here</p>
            <p class="text-sm">123 Mansion Drive, Luxury District</p>
          </div>
        </div>
      </div>

      <!-- Directions -->
      <div>
        <h2 class="mb-8">Getting Here</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-bg-light p-8 rounded">
            <h4 class="text-primary mb-4">By Car</h4>
            <p class="text-sm text-text-light">From downtown, take Main Street north for 5 miles. Turn right on Luxury Boulevard and continue for 2 miles. The mansion entrance is on the left.</p>
          </div>
          <div class="bg-bg-light p-8 rounded">
            <h4 class="text-primary mb-4">By Air</h4>
            <p class="text-sm text-text-light">International Airport is 30 minutes away. We offer private transfer services. Please contact our concierge to arrange pickup.</p>
          </div>
          <div class="bg-bg-light p-8 rounded">
            <h4 class="text-primary mb-4">By Train</h4>
            <p class="text-sm text-text-light">Central Station is 15 minutes from the mansion. Taxi and ride-sharing services are readily available at the station.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
